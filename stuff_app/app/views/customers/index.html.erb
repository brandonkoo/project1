
<h1>customers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>zipcode</th>
      <th>Phone</th>



      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customers| %>
      <tr>
        <td><%= customers.name %></td>
        <td><%= customers.address %></td>
        <td><%= customers.city %></td>
        <td><%= customers.state %></td>
        <td><%= customers.zipcode %></td>
        <td><%= customers.phone %></td>




        <td><%= link_to 'Show', customers %></td>
        <td><%= link_to 'Edit', edit_customer_path(customers) %></td>
        <td><%= link_to 'Destroy', customers, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
