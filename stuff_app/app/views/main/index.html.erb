<h1>Buy stuff</h1>
<p>hello, you can buy stuff here!</p>

<br />

<h3>Our stuff</h3>
<table class="table table-striped table-bordered">
  <tr>

    <th>Product</th>
    <th>Description</th>
    <th>Price</th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= link_to product.prod_name, product %></td>
    <td><%= link_to product.description, product %></td>

    <td><%= number_to_currency(product.price, :unit => "$") %></td>
  </tr>
<% end %>
</table>
